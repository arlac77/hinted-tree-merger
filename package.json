{
  "name": "hinted-tree-merger",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./src/index.mjs",
  "exports": {
    ".": "./src/index.mjs"
  },
  "description": "merges two trees guided with hints",
  "keywords": [
    "assign",
    "deep",
    "extend",
    "merge",
    "mixin"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme ./src/index.mjs --section=API",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/index.mjs"
  },
  "devDependencies": {
    "ava": "^3.13.0",
    "c8": "^7.3.1",
    "documentation": "^13.0.2",
    "semantic-release": "^17.1.2"
  },
  "engines": {
    "node": ">=12.18.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/hinted-tree-merger.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/hinted-tree-merger/issues"
  },
  "homepage": "https://github.com/arlac77/hinted-tree-merger#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-esm-only",
      "arlac77/template-github"
    ]
  }
}
